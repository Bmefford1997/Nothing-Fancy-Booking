@model IEnumerable<Nothing_Fancy.Models.Review>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title:
                @*@Html.DisplayNameFor(model => model.Title)*@
            </th>
            <th>
                Name:
                @*@Html.DisplayNameFor(model => model.reviewerName)*@
            </th>
            <th>
                Rating:
                @*@Html.DisplayNameFor(model => model.reviewRate)*@
            </th>
            <th>
                Date:
                @*@Html.DisplayNameFor(model => model.reviewDate)*@
            </th>
            <th>
                Review:
                @*@Html.DisplayNameFor(model => model.reviewContent)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.reviewerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.reviewRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.reviewDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.reviewContent)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
