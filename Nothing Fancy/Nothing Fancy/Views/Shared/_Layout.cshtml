<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nothing_Fancy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/style.css" />
    <link rel="stylesheet" href="~/css/pikaday.css" />
    <link rel="stylesheet" href="~/css/theme.css" />
    <link rel="stylesheet" href="~/css/triangle.css" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@1,700&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap">
    <link rel="stylesheet" href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" type="text/css" />

    <script>
        function openSideMenu() {
            document.getElementById('menu').style.width = '250px';
            document.getElementById('content').style.marginLeft = '250px';
        }

        function closeSideMenu() {
            document.getElementById('menu').style.width = '0px';
            document.getElementById('content').style.marginLeft = '0px';
        }
    </script>
    @*This css file is causing formatting issues.
            <link href="~/css/site2.css" rel="stylesheet" />*@

</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark scrolling-navbar" id="layout-navbar">
            <div class="container">

                <!-- Brand -->
                <a class="navbar-brand" style="color:white;">
                    <strong>NFH</strong>
                </a>

                <!-- Collapse -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Links -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <!-- Left -->
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Rooms" asp-action="Listing">Rooms</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Rooms" asp-action="Reviews">Reviews</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>

                    <!-- Right -->
                    <ul class="navbar-nav nav-flex-icons">
                        <li class="nav-item">
                            <a href="https://github.com/Bmefford1997/Nothing-Fancy-Booking" class="nav-link border border-light rounded"
                               target="_blank">
                                <i class="fab fa-github mr-2"></i>NFH GitHub
                            </a>
                        </li>
                    </ul>

                </div>

            </div>
        </nav>


        @* Side Bar Menu Code
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div id="content">
                <span class="slide">
                    <a href="#" onclick="openSideMenu()">
                        <i class="fa fa-bars" aria-hidden="true"></i>
                    </a>
                </span>
                <div id="menu" class="navside">
                    <a href="#" class="close" onclick="closeSideMenu()">
                        <i class="fas fa-times" data-fa-transform="up-12"></i>
                    </a>

                    <a href="#">Home</a>
                    <a href="#">Home</a>
                    <a href="#">Home</a>
                    <a href="#">Home</a>
                    <a href="#">Home</a>
                </div>
            </div>
        </nav>*@
           
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <div class="text-center">
        <footer class="border-top footer text-muted" id="layout-footer">
            <div class="container">
                &copy; 2020 - Nothing Fancy Hotel - <a asp-area="" asp-controller="Home" asp-action="About">About</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/pikaday.js"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")"
            type="text/javascript"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://kit.fontawesome.com/7cb494158b.js" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
