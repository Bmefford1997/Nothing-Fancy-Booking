<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nothing_Fancy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@1,700&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" type="text/css" />
</head>
<body>
    <div>
        <header>
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-dark scrolling-navbar" id="layout-navbar">
                <div class="container">
                    <a class="navbar-brand" style="color:white;">
                        <strong>NFH</strong>
                    </a>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Rooms" asp-action="Listing">Rooms</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Reviews" asp-action="Index">Reviews</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav nav-flex-icons">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us!</a>
                            </li>
                            <li class="nav-item pl-3">
                                <a href="https://github.com/Bmefford1997/Nothing-Fancy-Booking" class="nav-link border border-light rounded"
                                   target="_blank">
                                    <i class="fab fa-github mr-2"></i>NFH GitHub
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    </div>

    <div class="container">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <div class="text-center">
        <footer class="border-top footer text-muted" id="layout-footer">
            <div class="container">
                &copy; 2020 - Nothing Fancy Hotel -
                <a asp-area="" asp-controller="Home" asp-action="About">About</a>  |
                <a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a> |
                <a asp-area="" asp-controller="Developer" asp-action="API">API</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://kit.fontawesome.com/7cb494158b.js" crossorigin="anonymous"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")"
            type="text/javascript"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
