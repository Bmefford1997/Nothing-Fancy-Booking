@model Nothing_Fancy.Models.Reservation

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.reserverName)
        </dd>
        <dt class="col-sm-2">
            Room:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nameOfRoom)
        </dd>
        <dt class="col-sm-2">
            Begin Date:
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:MM/dd/yyyy}", Model.reserveDateBegin)
        </dd>
        <dt class="col-sm-2">
            End Date:
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:MM/dd/yyyy}", Model.reserveDateEnd)
        </dd>
        <dt class="col-sm-2">
            Cost:
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:c}", Model.cost)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Detailed">Back to List</a>
</div>
